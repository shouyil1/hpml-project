{
    "type": "object",
    "required": ["alerts", "fault", "groups", "recommended_actions"],
    "properties": {
        "alerts": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "required": ["id", "group_id", "metadata"],
                "properties": {
                    "group_id": {
                        "type": "string"
                    },
                    "id": {
                        "type": "string",
                        "enum": ["CPUSpend", "MemorySpend", "NoRequestsDetected", "FailedPodsDetected", "PendingPodsDetected", "PodCrashLoopBackOff", "RequestErrorRate", "RequestLatency", "KafkaConnectionClosureRate"]
                    },
                    "metadata": {
                        "type": "object",
                        "properties": {
                            "description": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "aliases": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "array",
                "items": {
                    "type": "string"
                }
            }
        },
        "fault": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["category", "condition", "entity", "fault_mechanism"],
                "properties": {
                    "category": {
                        "type": "string"
                    },
                    "condition": {
                        "type": "string"
                    },
                    "entity": {
                        "type": "object",
                        "required": ["kind", "name"],
                        "properties": {
                            "group_id": {
                                "type": "string"
                            },
                            "kind": {
                                "type": "string"
                            },
                            "name": {
                                "type": "string"
                            }
                        }
                    },
                    "fault_mechanism": {
                        "type": "string"
                    }
                }
            }
        },
        "groups": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "required": ["kind", "id"],
                "properties": {
                    "filter": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "id": {
                        "type": "string"
                    },
                    "kind": {
                        "type": "string"
                    },
                    "namespace": {
                        "type": "string"
                    },
                    "root_cause": {
                        "type": "boolean"
                    }
                }
            }
        },
        "propagations": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["condition", "effect", "source", "target"],
                "properties": {
                    "condition": {
                        "type": "string"
                    },
                    "effect": {
                        "type": "string"
                    },
                    "source": {
                        "type": "string"
                    },
                    "target": {
                        "type": "string"
                    }
                }
            }
        },
        "recommended_actions": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["solution"],
                "properties": {
                    "solution": {
                        "type": "object",
                        "required": ["actions", "id"],
                        "properties": {
                            "actions": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "id": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    }
}
